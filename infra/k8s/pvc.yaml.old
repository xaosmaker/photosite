# https://kubernetes.io/docs/concepts/storage/persistent-volumes/
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: photo-site-static-claim
  labels:
    app: photo-site-static-claim
spec:
  # AKS: default,managed-premium
  # GKE: standard
  # EKS: gp2 (custom)
  # Rook: rook-ceph-block,rook-ceph-fs
  storageClassName: ""
  accessModes:
  - ReadWriteMany
  resources:
    requests:
      storage: 50Gi
---

